{{> message}}

<form class="d-flex flex-column align-items-start mt-5" action="/records" method="POST">

  <div class="mt-2">
    <label for="name" style="color: green">名稱:</label>
    <input type="text" id="name" placeholder="name" name="name" style="border-radius: 10px">
  </div>
  <div class="mt-2">
    <label for="date" style="color: green">日期:</label>
    <input type="date" id="date" placeholder="date" name="date" style="border-radius: 10px">
  </div>
  <div class="mt-2">
    <label for="categoryId" style="color: green">類別:</label>
    <select name="categoryId" id="categoryId">
      <option disabled selected>請點選</option>
      <option value="1">家居物業</option>
      <option value="2">交通出行</option>
      <option value="3">休閒娛樂</option>
      <option value="4">餐飲食品</option>
      <option value="5">其他</option>
    </select>
  </div>
  <div class="mt-2">
    <label for="amount" style="color: green">金額:</label>
    <input type="text" id="amount" placeholder="amount" name="amount" style="border-radius: 10px">
  </div>

  <button class="btn btn-success mt-3" type="submit">新增支出</button>

</form>